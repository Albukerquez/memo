<div id="comment">
  <div class="user-name">
    <% if comment.user %>
      <%= link_to comment.user.user_name, profile_path(comment.user.user_name) %>
    <% end %>
  </div>
  <div class="comment-content">
    <%= comment.content %>
  </div>
  <% if policy(comment).destroy? %>
    <%= link_to post_comment_path(post, comment), method: :delete, data: { confirm: 'Вы уверены?' }, remote: true do %>
      <span class="fa fa-times delete-comment"></span>
    <% end %>
  <% end %>
</div>
