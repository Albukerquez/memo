<% provide(:title, 'Редактировать') %>
<h1 class="text-center">Редактировать пост</h1>

<%= render 'form', post: @post %>

<%= link_to 'Показать', @post, class: 'btn btn-sm btn-warning' %>
<%= link_to 'Вернуться', posts_path, class: 'btn btn-sm btn-success' %>
<% if policy(Post).destroy? %>
<%= link_to 'Удалить', post_path(@post), method: :delete,
data: { confirm: 'Вы уверены?' }, class: 'btn btn-sm btn-danger' %>
<% end %>
