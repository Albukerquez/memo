<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>

<ul class="list-group list-group-flush">

  <li class="list-group-item">
    <div class="field">
      <%= f.label 'Никнейм' %>
      <%= f.text_field :user_name, required: true, class: 'form-control', placeholder: "Никнейм" %>
    </div>
  </li>

  <li class="list-group-item">
    <div class="field">
      <%= f.label 'Почта' %><br />
      <%= f.email_field :email, autofocus: true, class: 'form-control', placeholder: "Почта" %>
    </div>
  </li>

  <li class="list-group-item">
    <div class="field">
      <%= f.label 'Пароль' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Пароль" %>
    </div>
  </li>

  <li class="list-group-item">
    <div class="field">
      <%= f.label 'Подтверждение пароля' %><br />
      <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: "Подтверждение" %>
    </div>
  </li>


  <li class="list-group-item">
    <div class="actions">
      <%= f.submit "Регистрация", class: 'btn btn-success' %>
    </div>
  </li>
</ul>
<% end %>

<%= render "devise/shared/links" %>
