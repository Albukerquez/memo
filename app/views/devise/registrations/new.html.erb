<h2 class="text-center">Регистрация</h2>
<div class="container col-md-4 col-md-offset-4 col-sm-6 col-sm-offset-3 col-xs-8 col-xs-offset-2">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
  <%= devise_error_messages! %>

    <div class="form-group">
      <%= form.label 'Никнейм' %>
      <%= form.text_field :user_name, required: true, class: 'form-control', placeholder: "Никнейм" %>
    </div>

    <div class="form-group">
      <%= form.label 'Почта' %><br />
      <%= form.email_field :email, autofocus: true, class: 'form-control', placeholder: "Почта" %>
    </div>

    <div class="form-group">
      <%= form.label 'Пароль' %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> знаков минимум)</em>
      <% end %><br />
      <%= form.password_field :password, autocomplete: "off", class: 'form-control', placeholder: "Пароль" %>
    </div>

    <div class="form-group">
      <%= form.label 'Подтверждение пароля' %><br />
      <%= form.password_field :password_confirmation, autocomplete: "off",
      class: 'form-control', placeholder: 'Подтверждение пароля' %>
    </div>

    <div class="actions text-center">
      <%= form.submit "Зарегистрироваться", class: 'btn btn-success' %>
    </div>

<% end %>
<br>
<p>Уже зарегистрированы?</p>
<%= render "devise/shared/links" %>
</div>
