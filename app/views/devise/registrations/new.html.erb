<% provide(:title, 'Регистрация') %>
<div class="registration-bg">
  <div class="container">
    <div class="row">
      <div class="col-4 offset-md-4">
        <div class="log-in panel">
          <div class="panel-heading">
            <h2>Регистрация</h2>
          </div>
          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
            <%= devise_error_messages! %>
            <div class="panel-body">
              <div class="form-group">
                <%= form.text_field :user_name, required: true, autofocus: true, label: false, placeholder: "Никнейм", class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.email_field :email, required: true, label: false, placeholder: "Почта", class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.password_field :password, require: true, label: false, autocomplete: "off", placeholder: "Пароль", class: 'form-control' %>
              </div>

              <div class="form-group">
                <%= form.password_field :password_confirmation, required: true, label: false, autocomplete: "off", placeholder: 'Подтверждение пароля', class: 'form-control' %>
              </div>

              <div class="actions text-center">
                <%= form.submit "Зарегистрироваться", class: 'btn btn-info btn-block' %>
              </div>
            </div>
          <% end %>
          <br>
          <p>Уже зарегистрированы?</p>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
