<div class="posts-wrapper">
  <div class="post">
    <div class="post-body">
      <div class="image-wrap">
        <%= form_for @user, url: { action: "update"}, multipart: true do |f| %>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4>Change your profile image:
                  <div class="img-circle">
                    <%= profile_avatar_select(@user) %>
                  </div>
                  <%= f.hidden_field :avatar, value: @user.cached_avatar_data %>
                  <%= f.file_field :avatar, onChange: 'loadFile(event)' %>
                </h4>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-12">
              <div class="form-group text-center">
                <h4>Update your bio:
                  <%= f.text_area :bio, label: false, rows: 4 %>
                </h4>
              </div>
            </div>
          </div>
          <div class="form-group text-center">
            <%= f.submit "Update Profile", class: 'btn btn-success' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
